generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(cuid())
  createdAt         DateTime     @default(now())
  email             String       @unique
  name              String
  password          String
  attemptedContests Contest[]    @relation("UserContests")
  submissions       Submission[]
}

model TestCase {
  id        Int     @id @default(autoincrement())
  content   String
  problemId Int
  problem   Problem @relation(fields: [problemId], references: [id])
}

model Problem {
  id              Int             @id @default(autoincrement())
  name            String
  content         String
  difficultyLevel DifficultyLevel
  testcases       TestCase[]
  contests        Contest[]       @relation("ContestProblems")
  submissions     Submission[]
}

model Contest {
  id           Int          @id @default(autoincrement())
  name         String
  noOfProblems Int
  level        ContestLevel
  closesOn     DateTime
  problems     Problem[]    @relation("ContestProblems")
  users        User[]       @relation("UserContests")
  submissions  Submission[]
}

model Submission {
  status    ProblemStatus
  userId    String
  problemId Int
  contestId Int?
  user      User          @relation(fields: [userId], references: [id])
  problem   Problem       @relation(fields: [problemId], references: [id])
  contest   Contest?      @relation(fields: [contestId], references: [id])

  @@id([userId, problemId])
}

enum ContestLevel {
  BEGINNER     @map("Beginner")
  INTERMEDIATE @map("Intermediate")
  ADVANCED     @map("Advanced")
}

enum DifficultyLevel {
  EASY   @map("Easy")
  MEDIUM @map("Medium")
  HARD   @map("Hard")
}

enum ProblemStatus {
  UNSOLVED @map("Unsolved")
  SOLVED   @map("Solved")
}
