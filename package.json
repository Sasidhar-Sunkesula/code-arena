{
  "name": "code-arena",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm run generate-prisma-client",
    "generate-prisma-client": "pnpm exec prisma generate --schema=./packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "@prisma/client": "5.19.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.14.3"
}