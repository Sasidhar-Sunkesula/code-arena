{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./types"],
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "../../packages/ui/src/shad/ui/time-picker-utils.tsx",
    "types/next-auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
